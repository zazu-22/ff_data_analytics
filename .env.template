# FF Analytics Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ============================================
# GCP Configuration
# ============================================
# Your Google Cloud Project ID
GCP_PROJECT_ID=

# GCS bucket name for data storage
GCS_BUCKET=

# GCP region for bucket location
GCS_REGION=

# Service account name (will create if doesn't exist)
GCP_SERVICE_ACCOUNT_NAME=

# Path to service account key (after generation)
GOOGLE_APPLICATION_CREDENTIALS=

# ============================================
# League Sheets Configuration
# ============================================
# Commissioner's Google Sheet ID or full URL
COMMISSIONER_SHEET_URL=""
COMMISSIONER_SHEET_ID=""

# League Sheets tabs to Copy
SHEETS_TABS=""

# ============================================
# Configuration for League Sheet Copy
# ============================================
# Google Sheet ID for for leage_sheet_copy
LEAGUE_SHEET_COPY_URL=""
LEAGUE_SHEET_COPY_ID=""
# Set to "1" or "true" to skip run if source sheet unchanged since last run
ENTIRE_RUN_SKIP_IF_UNCHANGED=1
# Configure pause between tab copy
PAUSE_BETWEEN_TABS_SEC=0.5
# Number of rows and columns to confirm
CHECKSUM_ROWS=50
CHECKSUM_COLS=50
# Set to "1" or "true" to enable separate logs workbook
LOG_IN_SEPARATE_SHEET=1
# Drive folder ID of the project root folder
LOG_PARENT_ID=""
# Subfolder pathname for where log workbook is stored
LOG_FOLDER_PATH=""
LOG_SHEET_BASENAME=""

# ============================================
# Sleeper API Configuration
# ============================================
# Your Sleeper league ID
SLEEPER_LEAGUE_ID=""

# ============================================
# Sports Data IO Configuration
# ============================================
# Sports Data IO API configuration
SPORTS_DATA_IO_API_KEY=""

# ============================================
# Discord Notifications (Optional)
# ============================================
# Discord webhook URL for pipeline notifications
DISCORD_WEBHOOK_URL=""

# ============================================
# Environment Settings
# ============================================
# Environment name (dev, staging, prod)
ENVIRONMENT=dev

# Enable debug logging
DEBUG=false

# ============================================
# Data Pipeline Settings
# ============================================
# Current season
CURRENT_SEASON=2025

# Pipeline run mode (full, incremental)
PIPELINE_MODE=incremental

# Output path for raw data (local development or cloud production)
# Local: data/raw
# Cloud: gs://BUCKET_NAME/raw
OUTPUT_PATH=data/raw
